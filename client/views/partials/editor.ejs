<div class="row page-wrapper-alert alert alert-warning alert-dismissable">
  <strong>Atenci&oacute;n:</strong>
  El despliegue del portal es tentativo y va a depender del dispositivo
  <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
</div>

<div id="mobilePortraitRow" class="row" ng-controller="editorController">
  <div id="hotspotSection" class="col-sm-6" ng-init="getTemplate(<%= json2string(locals.template) %>, true)">
    <div id='borderAndHotspotContainer'>
      <img id="mobile-border" class="screen-border" src="/assets/images/phone-white.png" height="633px" width="320px" alt='mobile border'/>
      <div class="screen" id="hotspotContainer"></div>
    </div>
  </div>

  <div id="attrChangeSection" class="col-sm-6">
    <br/>
    <br/>

    <div class="form-group row">

      <label class="col-sm-2 form-control-label">Fondo</label>
      <div class="col-sm-10">
        <input type="file" class="form-control file-upload" data-key="BACKGROUND-IMAGE" ng-click="fileChanged('BACKGROUND-IMAGE')" id="BACKGROUND-IMAGE">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 form-control-label">Logo</label>
      <div class="col-sm-10">
        <input type="file" class="form-control file-upload" data-key="IMAGE-PATH" ng-click="fileChanged('IMAGE-PATH')" id="IMAGE-PATH">
      </div>
    </div>
    <hr/>
    <div class="form-group row">
      <label for="inputPassword3" class="col-sm-2 form-control-label">Texto principal</label>
      <div class="col-sm-10">
        <textarea class="form-control" rows="2" ng-model="current_hotspot.values['MAIN-TEXT-ES']" ng-change="recompile()" ></textarea>
      </div>
    </div>
    <div class="form-group row">
      <label for="inputPassword3" class="col-sm-2 form-control-label">Color principal</label>
      <div class="col-sm-10 input-group colorpicker-component">
        <input type="text" ng-model="current_hotspot.values['MAIN-TEXT-COLOR']" class="form-control" ng-change="recompile()"/>
        <span class="input-group-addon">
          <i></i>
        </span>
      </div>
    </div>
    <div class="input-group" style="width: 100%;">
      <span class="input-group-addon" ng-click="recompileSize('MAIN-TEXT-SIZE', 'down')">
        <i class="fa fa-caret-down" aria-hidden="true"></i>
      </span>
      <input type="text" value="Tama&ntilde;o: {{current_hotspot.values['MAIN-TEXT-SIZE']}}" class="form-control" readonly/>

      <span class="input-group-addon" ng-click="recompileSize('MAIN-TEXT-SIZE', 'up')">
        <i class="fa fa-caret-up" aria-hidden="true"></i>
      </span>
    </div>
    <hr/>

    <div class="form-group row">
      <label for="inputPassword3" class="col-sm-2 form-control-label">Bajada</label>
      <div class="col-sm-10">
        <textarea class="form-control" rows="2" ng-model="current_hotspot.values['SECOND-TEXT-ES']" ng-change="recompile()"></textarea>
      </div>
    </div>
    <div class="form-group row">
      <label for="inputPassword3" class="col-sm-2 form-control-label">Color bajada</label>
      <div class="col-sm-10 input-group colorpicker-component">
        <input type="text" ng-model="current_hotspot.values['SECOND-TEXT-COLOR']" class="form-control" ng-change="recompile()"/>
        <span class="input-group-addon">
          <i></i>
        </span>
      </div>
    </div>
    <div class="input-group" style="width: 100%;">
      <span class="input-group-addon" ng-click="recompileSize('SECOND-TEXT-SIZE', 'down')">
        <i class="fa fa-caret-down" aria-hidden="true"></i>
      </span>
      <input type="text" value="Tama&ntilde;o: {{current_hotspot.values['SECOND-TEXT-SIZE']}}" class="form-control" readonly/>

      <span class="input-group-addon" ng-click="recompileSize('SECOND-TEXT-SIZE', 'up')">
        <i class="fa fa-caret-up" aria-hidden="true"></i>
      </span>
    </div>
    <hr/>
    <div class="form-group row">
      <label for="inputPassword3" class="col-sm-2 form-control-label">Color del bot&oacute;n</label>
      <div class="col-sm-10 input-group colorpicker-component">
        <input type="text" ng-model="current_hotspot.values['BUTTON-COLOR']" class="form-control" ng-change="recompile()"/>
        <span class="input-group-addon">
          <i></i>
        </span>
      </div>
    </div>

  </div>
</div>
